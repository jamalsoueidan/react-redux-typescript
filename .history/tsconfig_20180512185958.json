{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "Components/*": ["Components/*"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}
