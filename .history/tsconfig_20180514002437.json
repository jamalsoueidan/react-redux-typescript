{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "Components/*": ["Components/*"],
      "Pages/*": ["Pages/*"],
      "Store/*": ["Store/*"],
    }
  },
  "exclude": [
    "typings",
    "node_modules"
  ]
}
